@model IEnumerable<coursework.Models.Voucher>

@{
    ViewBag.Title = "Путевки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Путевки</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>

<form method="get" action="@Url.Action("Search", "Vouchers")">
    <input type="text" name="search" id="search" />
    <button type="submit">Поиск</button>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Employee.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Route.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tourist.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ending)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Route.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tourist.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Start)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ending)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
