@model IEnumerable<coursework.Models.Route>

@{
    ViewBag.Title = "Маршруты";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Маршруты</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>

<form method="get" action="@Url.Action("Search", "Routes")">
    <input type="text" name="search" id="search" />
    <button type="submit">Поиск</button>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Hotel.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Itinerary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CostOfFlight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransferFee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Hotel.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Itinerary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CostOfFlight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TransferFee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
